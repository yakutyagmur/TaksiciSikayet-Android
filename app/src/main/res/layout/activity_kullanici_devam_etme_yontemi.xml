<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context=".KullaniciDevamEtmeYontemi">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="325dp"
        android:layout_height="82dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="100dp"
        android:hint="İŞLEMİNİZE NASIL DEVAM ETMEK İSTERSİNİZ?"
        android:textColorHint="#100F0F"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/Semtİcin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Semtİcin"
        android:layout_width="240dp"
        android:layout_height="80dp"
        android:layout_marginBottom="94dp"
        android:backgroundTint="#7E7097"
        android:text="Başka Bir İşlem İçin Semtlere Git"
        app:layout_constraintBottom_toTopOf="@+id/Anasayfaİcin"
        app:layout_constraintEnd_toEndOf="@+id/Anasayfaİcin"
        app:layout_constraintStart_toStartOf="@+id/Anasayfaİcin"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/Anasayfaİcin"
        android:layout_width="228dp"
        android:layout_height="83dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="302dp"
        android:backgroundTint="#7E7097"
        android:text="Uygulamadan Çık"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Semtİcin" />
</androidx.constraintlayout.widget.ConstraintLayout>